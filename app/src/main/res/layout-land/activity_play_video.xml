<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="sambal.mydd.app.activity.PlayVideoActivity">

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/framescontroller"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/black"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_play_arrow_black_24dp"
                app:tint="@color/white" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:tint="@color/white"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_pause_black_24dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.6">

            <TextView
                android:id="@+id/tvFromTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <SeekBar
                android:id="@+id/seekbarProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminateTint="@color/colorPrimary"
                android:progressBackgroundTint="@color/white"
                android:scrollbarThumbVertical="@color/white"
                android:thumbTint="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvToTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="10dp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_back_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_marginBottom="@dimen/padding_7dp"
        android:layout_toLeftOf="@id/toolbar_title"
        android:background="@android:color/transparent"
        android:padding="@dimen/padding_5dp"
        android:scaleType="fitXY"
        android:src="@drawable/back"
        android:visibility="visible" />

</RelativeLayout>
