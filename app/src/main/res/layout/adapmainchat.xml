<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/root_layoutLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/padding_15dp"
        android:gravity="left"
        android:layout_marginRight="@dimen/padding_15dp"
        android:padding="@dimen/padding_5dp"
        android:background="@drawable/ic_curve_left">

        <!-- <ImageView
             android:layout_width="@dimen/padding_20dp"
             android:layout_height="@dimen/padding_20dp"
             android:src="@drawable/langle"
             android:elevation="0dp"
             android:layout_gravity="right"/>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_7dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvleftName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:fontFamily="@font/volte_semibold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:autoLink="web"
                        android:linksClickable="true"
                        tools:text="Sambhal Express" />

                    <TextView
                        android:id="@+id/tvLeftAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/volte_medium"
                        android:text="ADMIN"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:layout_marginLeft="@dimen/padding_10dp"
                        android:visibility="visible"
                        android:textColor="#3656DC"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivLeftimage"
                    android:visibility="gone"
                    android:layout_width="@dimen/chatImage"
                    android:layout_height="@dimen/chatImage"
                    android:layout_marginTop="@dimen/padding_5dp"
                    android:layout_marginBottom="@dimen/padding_5dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_4_3" />

                <TextView
                    android:id="@+id/tvLeftMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_3dp"
                    android:layout_marginBottom="@dimen/padding_3dp"
                    android:textColor="#101010"
                    android:textSize="17sp"
                    android:autoLink="web"
                    android:textColorLink="@color/colorPrimary"
                    android:linksClickable="true"
                    android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:fontFamily="@font/volte_medium"
                    tools:text="Lorem Ips-um has been" />
                <!--101010-->
                <TextView
                    android:id="@+id/tvLeftDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/volte_medium"
                    android:gravity="right|center"
                    android:textColor="@color/light_grey_for_text"
                    android:textSize="11sp"
                    tools:text="10:30 Am" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/padding_30dp"
            android:gravity="right"
            android:padding="@dimen/padding_5dp"
            android:layout_marginRight="@dimen/padding_15dp"
            android:background="@drawable/ic_curve_right"
            android:id="@+id/root_layoutRight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_7dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvrighName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:fontFamily="@font/volte_semibold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"

                    tools:text="Sambhal Express" />

                <TextView
                    android:id="@+id/tvRightAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/volte_medium"
                    android:text="ADMIN"
                    android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/padding_10dp"
                    android:visibility="visible"
                    android:textColor="#3656DC"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivRightimage"
                android:visibility="gone"
                android:layout_width="@dimen/chatImage"
                android:layout_height="@dimen/chatImage"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_5dp"
                android:layout_marginBottom="@dimen/padding_5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_4_3" />

            <TextView
                android:id="@+id/tvRightMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_3dp"
                android:layout_marginBottom="@dimen/padding_3dp"
                android:textColor="#101010"
                android:textSize="17sp"
                android:autoLink="web"
                android:textColorLink="@color/colorPrimary"
                android:linksClickable="true"
                android:layout_gravity="left|center"
                android:gravity="left|center"
                android:fontFamily="@font/volte_medium"
                tools:text="Lorem Ips-um has been" />
            <!--101010-->
            <TextView
                android:id="@+id/tvRightDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/volte_medium"
                android:gravity="right|center"
                android:textColor="@color/light_grey_for_text"
                android:textSize="11sp"
                tools:text="10:30 Am" />

        </LinearLayout>
        </LinearLayout>


</LinearLayout>
</layout>