<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="vertical">
        <!--  android:background="@drawable/otp"-->

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right|center"
            android:layout_marginTop="-18dp"
            android:layout_marginRight="-12dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_py_circle" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            app:srcCompat="@drawable/password_verify" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvVerification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding_5dp"
                    android:fontFamily="@font/volte_bold"
                    android:text="Verification Code"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding_10dp"
                    android:fontFamily="@font/volte_medium"
                    android:gravity="center"
                    android:text="Please type the verification code sent to "
                    android:textColor="@color/light_grey_for_text"
                    android:textSize="@dimen/description" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_20dp"
                    android:layout_marginTop="@dimen/padding_5dp"
                    android:layout_marginRight="@dimen/padding_20dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/volte_semibold"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text12_5" />


                    <TextView
                        android:id="@+id/tvWronNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/volte_medium"
                        android:gravity="center"
                        android:text=" Wrong Number?"
                        android:textColor="#0097f6"
                        android:textSize="12sp" />


                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding_5dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/volte_semibold"
                    android:gravity="center"
                    android:hint="-    -    -     -"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColor="@color/black"
                    android:textColorHint="#cfcfcf"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <in.aabhasjindal.otptextview.OtpTextView
                    android:id="@+id/exOTP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding_10dp"
                    android:fontFamily="@font/volte_semibold"
                    android:textColor="@color/black"
                    app:bar_active_color="@color/colorPrimary"
                    app:bar_enabled="false"
                    app:bar_height="2dp"
                    app:bar_inactive_color="@color/white"
                    app:height="40dp"
                    app:length="4"
                    app:otp_text_size="15sp"
                    app:width="40dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="40dp"

                    android:layout_marginTop="5dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/colorPrimary" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/text12_5"
                    android:fontFamily="@font/volte_medium"
                    android:gravity="center"
                    android:text="Enter 4-digit code"
                    android:textColor="@color/light_grey_for_text"
                    android:textSize="@dimen/description" />


                <!--                <LinearLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:layout_marginTop="@dimen/padding_20dp"-->
                <!--                    android:weightSum="2"-->
                <!--                    android:orientation="horizontal">-->

                <TextView
                    android:id="@+id/tvResend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding_20dp"
                    android:fontFamily="@font/volte_medium"
                    android:text=""
                    android:textColor="#0096f5"
                    android:textSize="@dimen/text12_5" />


                <!--                    <TextView-->
                <!--                        android:id="@+id/otp_counter_timer"-->
                <!--                        android:layout_width="0dp"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:gravity="left"-->
                <!--                        android:layout_gravity="center_horizontal"-->
                <!--                        android:fontFamily="@font/volte_medium"-->
                <!--                        android:text="0.0"-->
                <!--                        android:layout_weight="1"-->
                <!--                        android:textColor="#0096f5"-->
                <!--                        android:textSize="@dimen/text12_5" />-->

                <!--                </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/tvVerify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_10dp"
                    android:layout_marginTop="@dimen/padding25"
                    android:layout_marginRight="@dimen/padding_10dp"
                    android:background="@drawable/llsingupcontinuegree"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="right"
                        android:fontFamily="@font/volte_semibold"
                        android:gravity="center"
                        android:text="Verify"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_right_aa" />


                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
