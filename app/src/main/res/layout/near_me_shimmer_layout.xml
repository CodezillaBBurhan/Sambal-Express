<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_68sdp"
    android:layout_marginLeft="@dimen/padding_7dp"
    android:layout_marginTop="@dimen/padding_7dp"
    android:layout_marginRight="@dimen/padding_7dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingStart="@dimen/padding_3dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/padding_10dp"
    app:cardUseCompatPadding="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="start"
            android:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_7dp"
            android:background="@color/shimmer_background">

            <!--<androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">-->


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/card_bg_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/place_holder"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius="0dip"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <!-- </androidx.cardview.widget.CardView>-->
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginRight="7dp"
            android:gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding_7dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/volte_semibold"
                    android:gravity="start"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@color/shimmer_background"/>


                <TextView
                    android:id="@+id/tvDsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding_3dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/volte_medium"
                    android:gravity="start"
                    android:maxLines="4"
                    android:textColor="@color/light_grey_for_text"
                    android:textSize="11sp"
                    android:visibility="gone"
                    android:background="@color/shimmer_background"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_3dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/ivLocatiopn"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/map"
                        android:background="@color/shimmer_background"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvMiles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/volte_medium"
                        android:maxLines="2"
                        android:paddingStart="@dimen/padding_5dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:visibility="visible"
                        android:background="@color/shimmer_background"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:background="@color/shimmer_background">

                    <ImageView
                        android:layout_width="@dimen/padding_12dp"
                        android:layout_height="@dimen/padding_12dp"
                        android:layout_gravity="left|center"
                        android:src="@drawable/ic_rating_y"
                        android:background="@color/shimmer_background"
                        android:visibility="gone"/>


                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="@dimen/padding_3dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/volte_semibold"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:background="@color/shimmer_background"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
