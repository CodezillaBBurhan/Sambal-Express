<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_20dp"
            android:background="@drawable/llwhite35"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llLocation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/llpurpleround"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/volte_semibold"
                    android:gravity="center"
                    android:text="By Location"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFavourite"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvFavourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding_3dp"
                    android:fontFamily="@font/volte_semibold"
                    android:gravity="center"
                    android:text="Favourite"
                    android:textColor="#101010"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/viewvouceher"
                    android:layout_width="@dimen/padding_20dp"
                    android:layout_height="1px"
                    android:layout_marginTop="2dp"
                    android:background="#bdbdbd"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="No Followings" />

        <LinearLayout
            android:id="@+id/llNoData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/ic_chat_empty" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:fontFamily="@font/volte_medium"
                android:gravity="center"
                android:text="You have no active chats."
                android:textColor="#101010"
                android:textSize="16sp"
                android:id="@+id/main_title_tv" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginTop="@dimen/padding_10dp"
                android:fontFamily="@font/volte_medium"
                android:gravity="center"
                android:text="Follow or collect points from a business \n to keep up to date!"
                android:textColor="@color/light_grey_for_text"
                android:textSize="15sp"
                android:id="@+id/sub_title_tv" />

        </LinearLayout>

        <include layout="@layout/some_thing_went_wrong"
            android:layout_below="@+id/tool_bar1"
            android:id="@+id/new_chat_page_error_layout"/>
    </RelativeLayout>
</layout>