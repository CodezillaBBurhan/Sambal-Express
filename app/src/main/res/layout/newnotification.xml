<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7fa"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_colour" />

    <TextView
        android:id="@+id/tvNoti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_20dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_marginRight="@dimen/padding_20dp"
        android:fontFamily="@font/volte_medium"
        android:text="Notification"
        android:textColor="#101010"
        android:textSize="14sp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/my_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_10dp"/>

</LinearLayout>
</layout>