<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_10dp"
    android:layout_marginTop="@dimen/padding_10dp"
    android:layout_marginRight="7dp"
    android:background="@drawable/ic_22_curve">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_5dp"
        android:padding="@dimen/padding_5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_marginTop="@dimen/padding_5dp"
            android:layout_marginRight="@dimen/padding_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMsgName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:fontFamily="@font/volte_bold"
                tools:text="Gopalakanan" />


            <TextView
                android:id="@+id/tvKeep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_15dp"
                android:text="Keep"
                android:fontFamily="@font/volte_medium"
                android:visibility="visible"
                android:textColor="@color/red"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tvDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_15dp"
                android:text="Delete"
                android:fontFamily="@font/volte_medium"
                android:textColor="@color/red"
                android:textSize="12sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv"
            android:visibility="gone"
            android:layout_width="@dimen/chatImage"
            android:layout_height="@dimen/chatImage"
            android:layout_marginTop="@dimen/padding_5dp"
            android:layout_marginBottom="@dimen/padding_5dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_4_3" />



        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_marginTop="@dimen/padding_3dp"
            android:layout_marginRight="@dimen/padding_10dp"
            android:layout_marginBottom="@dimen/padding_5dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/volte_medium"
            android:gravity="left|center"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="2dp"
            android:textColor="#101010"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_marginTop="@dimen/padding_3dp"
            android:layout_marginRight="@dimen/padding_10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvReportedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_15dp"
                android:layout_weight="1"
                android:textColor="@color/light_grey_for_text"
                android:textSize="12sp"
                android:fontFamily="@font/volte_medium"
                tools:text="Reported by Admin" />

            <TextView
                android:id="@+id/tvReportTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_15dp"
                android:textColor="@color/light_grey_for_text"
                android:textSize="12sp"
                android:fontFamily="@font/volte_medium"
                tools:text="10:30" />

        </LinearLayout>

        <TextView
            android:id="@+id/textComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_marginTop="@dimen/padding_10dp"
            android:layout_marginRight="@dimen/padding_10dp"
            android:layout_marginBottom="@dimen/padding_10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/volte_bold"
            android:gravity="left|center"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="2dp"
            android:text="Comment:"
            android:textColor="#101010"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvComent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_marginTop="@dimen/padding_3dp"
            android:layout_marginRight="@dimen/padding_10dp"
            android:layout_marginBottom="@dimen/text12_5"
            android:background="@android:color/transparent"
            android:fontFamily="@font/volte_medium"
            android:gravity="left|center"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="2dp"
            android:textColor="#101010"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book" />

    </LinearLayout>
</LinearLayout>
</layout>