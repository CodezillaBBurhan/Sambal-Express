<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_colour"/>

    <LinearLayout
        android:layout_below="@+id/tool_barLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:mrb_progressTint="@color/new_greenclr"
            app:mrb_secondaryProgressTint="@color/new_greenclr"
            style="@style/Widget.MaterialRatingBar.RatingBar" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Tap a star to Rate"
        android:textSize="12sp"
        android:textColor="@color/light_grey_for_text"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="12sp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightGrayColor"
        android:layout_marginTop="@dimen/padding_10dp"/>


    <EditText
        android:id="@+id/exComments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/padding_5dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_marginRight="@dimen/padding_5dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/volte_medium"
        android:gravity="top"
        android:hint="Enter Review"
        android:minLines="2"
        android:paddingStart="3dp"
        android:textColor="#101010"
        android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|center"
        android:text="Send"
        android:singleLine="true"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:fontFamily="@font/volte_medium" />
</RelativeLayout>
</layout>