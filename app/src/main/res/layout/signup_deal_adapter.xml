<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/llMain"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/root_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp">
            <!-- app:cardUseCompatPadding="true"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_new_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_gravity="left|center"
                    android:background="@drawable/llgreen"
                    android:gravity="center"
                    android:text="Trending"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_heading"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_gravity="center"
                        android:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/rl"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_gravity="left|center"
                            android:adjustViewBounds="true"
                            android:gravity="left|right"
                            android:maxHeight="@dimen/height"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <!---->
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/card_bg_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="top|left"
                                android:scaleType="centerCrop"
                                android:src="@drawable/mainimageplaceholder"
                                android:visibility="visible"
                                app:layout_constraintDimensionRatio="H, 1:1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:riv_border_color="#333333"
                                app:riv_border_width="0dip"
                                app:riv_corner_radius="4dip"
                                app:riv_mutate_background="true"
                                app:riv_oval="false" />


                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <!--  <RelativeLayout
                          android:id="@+id/rl"
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/_120sdp"
                          android:layout_gravity="right|center"
                          android:gravity="start"
                          android:visibility="visible"
                          app:layout_constraintDimensionRatio="H, 2:2"
                          app:layout_constraintEnd_toEndOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent">


                          <ImageView
                              android:id="@+id/card_bg_img"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:adjustViewBounds="true"
                              android:src="@drawable/mainimageplaceholder"
                              android:visibility="visible"
                              app:layout_constraintDimensionRatio="H,2:2"
                              app:layout_constraintEnd_toEndOf="parent"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toTopOf="parent" />

                      </RelativeLayout>-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="@dimen/padding_7dp"
                        android:gravity="left"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_product_name"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/padding_7dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/volte_semibold"
                                android:gravity="start"
                                android:maxLines="2"
                                android:textColor="#07153A"
                                android:textSize="16sp"
                                tools:text="Waitrose Duchy Organic potattoes" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="bottom|center"
                                android:layout_marginTop="@dimen/padding_3dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tvFree"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginRight="@dimen/padding_15dp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/volte_semibold"
                                    android:gravity="left|center"
                                    android:singleLine="false"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="18sp"
                                    tools:text="@string/app_name" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_3dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/tv_sponsered"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_weight="1"
                                android:text="SPONSORED"
                                android:textColor="@color/red"
                                android:textSize="@dimen/small_heading"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/iv_gift_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="start|center"
                                android:background="@android:color/transparent"
                                android:src="@drawable/gift"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_left_days"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:fontFamily="@font/volte_semibold"
                                android:gravity="left|center"
                                android:textSize="12sp"
                                android:textColor="#06163A"
                                android:visibility="visible"
                                tools:text="288 days left"
                                android:singleLine="true" />


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llAgent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_7dp"
                    android:layout_marginRight="7dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="#f0f0f0"
                        android:visibility="visible" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:id="@+id/rl1"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="left|center"
                            android:adjustViewBounds="true"
                            android:gravity="left|right"
                            android:maxHeight="@dimen/height"
                            android:visibility="gone"
                            app:layout_constraintDimensionRatio="H, 16:9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/ivAgentImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|left"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/sponplaceholder"
                                android:visibility="visible"
                                app:layout_constraintDimensionRatio="H, 16:9"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:riv_border_color="#333333"
                                app:riv_border_width="0dip"
                                app:riv_corner_radius="4dip"
                                app:riv_mutate_background="true"
                                app:riv_oval="false" />


                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tvagentName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:fontFamily="@font/volte_semibold"
                            android:gravity="left|center"
                            android:maxLines="2"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            tools:text="AVS Superstore" />


                        <LinearLayout
                            android:layout_marginRight="@dimen/padding_5dp"
                            android:layout_width="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_height="@dimen/padding_20dp"
                            android:visibility="gone"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tvRedeemTex"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:fontFamily="@font/volte_medium"
                                android:gravity="left|center"
                                android:textColor="#E28A57"
                                android:textSize="10sp"
                                android:visibility="visible"
                                tools:text="" />


                            <ImageView
                                android:id="@+id/ivLocatiopn"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="right|center"
                                android:src="@drawable/map" />

                            <TextView
                                android:id="@+id/tvLocationmiles"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right|center"
                                android:fontFamily="@font/volte_medium"
                                android:gravity="right|center"
                                android:paddingStart="2dp"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                tools:text="0.00mi" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/root_layout"
                android:layout_gravity="end"
                android:visibility="visible"
                android:layout_margin="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/iv_favorite_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_heart_deactive"
                    android:padding="@dimen/_3sdp"
                    android:visibility="visible" />


            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/iv_close_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_20dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="-13dp"
            android:layout_weight="1"
            android:elevation="8dp"
            android:visibility="gone" />
    </LinearLayout>
</layout>