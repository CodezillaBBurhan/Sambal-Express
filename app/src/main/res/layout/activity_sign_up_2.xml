<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fl_signup_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/standered_white"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/sign_up_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="right|center"
                android:layout_marginTop="-18dp"
                android:layout_marginRight="-12dp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_py_circle" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/volte_medium"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Welcome back"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_3dp"
                android:fontFamily="@font/volte_semibold"
                android:gravity="center"
                android:text="@string/signUp_page_title"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_22sdp" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp">


                    <LinearLayout
                        android:id="@+id/sign_up_form_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout style="@style/SignUpLinearLayout">


                                <EditText
                                    android:id="@+id/sign_up_name"
                                    style="@style/SignUpEditText"
                                    android:drawableLeft="@drawable/ic_user_"
                                    android:drawablePadding="@dimen/padding_5dp"
                                    android:fontFamily="@font/volte_semibold"
                                    android:hint="@string/hint_name"
                                    android:imeOptions="actionNext"
                                    android:nextFocusForward="@+id/sign_up_user_name" />
                            </LinearLayout>

                            <LinearLayout style="@style/SignUpLinearLayout">



                                <TextView
                                    android:id="@+id/sign_up_country"
                                    style="@style/SignUpEditText"
                                    android:drawableLeft="@drawable/ic_flag"
                                    android:drawableRight="@drawable/ic_arrow_down_grey"
                                    android:drawablePadding="@dimen/padding_5dp"
                                    android:fontFamily="@font/volte_semibold"
                                    android:hint="@string/hint_default_country" />
                            </LinearLayout>

                            <LinearLayout style="@style/SignUpLinearLayout">


                                <TextView
                                    android:id="@+id/sign_up_country_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:drawableLeft="@drawable/ic_phone"
                                    android:drawablePadding="@dimen/padding_5dp"
                                    android:gravity="center_vertical"
                                    android:inputType="number"
                                    android:paddingLeft="@dimen/padding_5dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black" />

                                <EditText
                                    android:id="@+id/sign_up_phone_number"
                                    style="@style/SignUpEditText"
                                    android:hint="@string/hint_phone_no"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:nextFocusForward="@+id/sign_up_referal" />
                            </LinearLayout>

                            <LinearLayout style="@style/SignUpLinearLayout">

                                <ImageView
                                    style="@style/SignUpImage"
                                    android:src="@drawable/phone"
                                    android:visibility="gone" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:inputType="text"
                                    android:paddingLeft="@dimen/padding_5dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black" />

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <EditText
                                        android:id="@+id/etReferralCode"
                                        style="@style/SignUpEditText"
                                        android:drawableLeft="@drawable/refer"
                                        android:drawablePadding="@dimen/padding_5dp"
                                        android:fontFamily="@font/volte_semibold"
                                        android:hint="Promo Code (if applicable)"
                                        android:imeOptions="actionNext"
                                        android:inputType="text"
                                        android:nextFocusForward="@+id/sign_up_referal" />

                                    <ImageView
                                        android:id="@+id/ivTick"
                                        android:layout_width="@dimen/padding25"
                                        android:layout_height="@dimen/padding25"
                                        android:layout_gravity="right|center"
                                        android:src="@drawable/successtick"
                                        android:visibility="gone" />

                                </FrameLayout>

                            </LinearLayout>


                            <LinearLayout
                                style="@style/SignUpLinearLayout"
                                android:visibility="gone">

                                <ImageView
                                    style="@style/SignUpImage"
                                    android:src="@drawable/new_password" />

                                <EditText
                                    android:id="@+id/sign_up_password"
                                    style="@style/SignUpEditText"
                                    android:hint="@string/hint_password"
                                    android:imeOptions="actionDone"
                                    android:inputType="textPassword"
                                    android:nextFocusForward="@+id/sign_up_referal" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding_3dp"
                                android:layout_marginTop="@dimen/padding_7dp"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/cb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:buttonTint="@color/colorPrimaryDark"
                                    android:gravity="left|center" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/padding_10dp"
                                        android:fontFamily="@font/volte_medium"
                                        android:gravity="left|center"
                                        android:text="By signing up, you agree to our"
                                        android:textColor="@color/black"
                                        android:singleLine="true"
                                        android:textSize="@dimen/_12sdp" />

                                    <TextView
                                        android:id="@+id/sign_up_read_more"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left|center"
                                        android:fontFamily="@font/volte_medium"
                                        android:gravity="left"
                                        android:singleLine="true"
                                        android:text="Terms &amp; Privacy Policy"
                                        android:textColor="#148eff"
                                        android:textSize="@dimen/text12_5" />
                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                style="@style/SignUpLinearLayout"
                                android:layout_marginBottom="@dimen/padding_5dp"
                                android:background="@android:color/transparent"
                                android:orientation="horizontal"
                                android:visibility="gone">


                                <CheckBox
                                    android:id="@+id/check_terms_condition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/padding_20dp"
                                    android:buttonTint="#481e5e"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/padding_15dp"
                                    android:gravity="left|center"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/sign_up_terms"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical|end"
                                        android:text="I agree to EULA"
                                        android:textColor="#91969f"
                                        android:textSize="@dimen/small_heading" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/padding_3dp"
                                        android:gravity="end"
                                        android:singleLine="true"
                                        android:text="Terms &amp; Conditions"
                                        android:textColor="#148eff"
                                        android:textSize="@dimen/text13"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/llsingupcontinuegree"
                                android:layout_marginTop="@dimen/padding_20dp">

                                <TextView
                                    android:id="@+id/sign_up_continue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_40sdp"
                                    android:fontFamily="@font/volte_medium"
                                    android:gravity="center"
                                    android:text="Let's go!"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_15sdp" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    app:srcCompat="@drawable/ic_right_aa" />




                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_15dp"
                                android:orientation="horizontal"
                                android:visibility="gone">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="3">


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical|center_horizontal">

                                        <View
                                            android:layout_width="wrap_content"
                                            android:layout_height="0.5dp"
                                            android:layout_centerVertical="true"
                                            android:layout_toRightOf="@+id/orText"
                                            android:background="@color/light_grey_for_text"
                                            android:visibility="gone" />

                                        <TextView
                                            android:id="@+id/orText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerHorizontal="true"
                                            android:fontFamily="@font/volte_semibold"
                                            android:text="Or"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/text12_5" />

                                        <View
                                            android:layout_width="wrap_content"
                                            android:layout_height="0.5dp"
                                            android:layout_centerVertical="true"
                                            android:layout_toLeftOf="@+id/orText"
                                            android:background="@color/light_grey_for_text"
                                            android:visibility="gone" />
                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/sign_up_forgot_password"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:inputType="number"
                                    android:text="@string/hint_forgot_password"
                                    android:textColor="@color/grey"
                                    android:textColorHint="@color/grey"
                                    android:textSize="@dimen/small_heading" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:background="@color/light_grey" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sign_up_confirm_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="40dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/padding_20dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitCenter"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/padding_7dp"
                            android:text="@string/zecast_live"
                            android:textColor="@color/white"
                            android:textSize="@dimen/top_heading"
                            android:visibility="gone" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/padding_15dp"
                            android:padding="@dimen/padding_7dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/padding_20dp"
                                    android:gravity="center"
                                    android:text="@string/confrim_heading"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/description" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Phone number:"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/description" />

                                <TextView
                                    android:id="@+id/confirm_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/padding_5dp"
                                    android:textColor="@color/blue_basic_theme"
                                    android:textSize="@dimen/description" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/padding_20dp"
                                    android:text="@string/confirm_description"
                                    android:textColor="@color/light_grey_for_text"
                                    android:textSize="@dimen/description" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="40dp"
                                    android:orientation="horizontal"
                                    android:paddingTop="1px">

                                    <TextView
                                        android:id="@+id/confirm_edit_btn"
                                        android:layout_width="0dp"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="@dimen/padding_10dp"
                                        android:layout_marginTop="@dimen/padding_5dp"
                                        android:layout_marginRight="@dimen/padding_5dp"
                                        android:layout_marginBottom="@dimen/padding_5dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/llgreen"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:text="@string/edit"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/medium_heading" />

                                    <TextView
                                        android:id="@+id/confirm_ok_btn"
                                        android:layout_width="0dp"
                                        android:layout_height="40dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="@dimen/padding_10dp"
                                        android:layout_marginTop="@dimen/padding_5dp"
                                        android:layout_marginRight="@dimen/padding_5dp"
                                        android:layout_marginBottom="@dimen/padding_5dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/llorange"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:text="@string/OK"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/medium_heading" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>


            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</layout>