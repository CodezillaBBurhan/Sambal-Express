<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/padding_5dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:textSize="@dimen/text13"
            android:fontFamily="@font/volte_bold"
            tools:text="Pargunan" />


        <TextView
            android:id="@+id/tvRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginRight="@dimen/padding_10dp"
            android:textColor="#ff7E29"
            android:textSize="@dimen/text12_5"
            android:visibility="gone"
            tools:text="Pending Request" />

        <LinearLayout
            android:id="@+id/llAdmin"
            android:layout_width="80dp"
            android:layout_height="@dimen/padding25"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/padding_7dp"
            android:background="@drawable/llpurpleroundborder"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="ADMIN"
                android:fontFamily="@font/volte_bold"
                android:textColor="#481e5e"
                android:textSize="@dimen/text13" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llExit"
            android:layout_width="80dp"
            android:layout_height="@dimen/padding25"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/padding_7dp"
            android:background="@drawable/llredfamily"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#f05922"
                android:textSize="@dimen/text12_5"
                android:fontFamily="@font/volte_bold"
                tools:text="Exit" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llCancel"
            android:layout_width="80dp"
            android:layout_height="@dimen/padding25"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/padding_7dp"
            android:background="@drawable/llcancelwhite"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="CANCEL"
                android:fontFamily="@font/volte_bold"
                android:textColor="#424242"
                android:textSize="@dimen/text12_5" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</layout>