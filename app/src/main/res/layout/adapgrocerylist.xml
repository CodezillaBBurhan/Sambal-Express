<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_10dp"
    android:layout_marginTop="@dimen/padding_10dp"
    android:layout_marginRight="@dimen/padding_10dp"
    android:background="@drawable/llgreybordergrocery"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:visibility="visible"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.7"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder_smallsize"
                app:layout_constraintDimensionRatio="H,11:4"
                app:riv_border_color="#333333"
                app:riv_border_width="0dip"
                app:riv_corner_radius_top_left="@dimen/padding_5dp"
                app:riv_corner_radius_top_right="@dimen/padding_5dp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_7dp"
            android:layout_marginTop="@dimen/padding_7dp"
            android:fontFamily="@font/volte_bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="Wimpson Store" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_7dp"
            android:layout_marginTop="@dimen/padding_3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_3dp"
                android:layout_weight="1"
                android:fontFamily="@font/volte_medium"
                android:textColor="@color/light_grey_for_text"
                android:textSize="12sp"
                tools:text="297 wimpson lane, Southampton" />


            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_3dp"
                android:layout_marginRight="@dimen/padding_7dp"
                android:fontFamily="@font/volte_medium"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                tools:text="0.4 mi" />


        </LinearLayout>


        <TextView
            android:id="@+id/tvPostCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_7dp"
            android:layout_marginTop="@dimen/padding_3dp"
            android:layout_weight="1"
            android:fontFamily="@font/volte_medium"
            android:minLines="1"
            android:textColor="@color/light_grey_for_text"
            android:textSize="12sp"
            tools:text="SOTY" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/padding_5dp"
            android:background="@drawable/llgreyborderwithoutradius"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvClick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_3dp"
                android:layout_weight="1"
                android:fontFamily="@font/volte_medium"
                android:gravity="center"
                android:text="Click &amp; Collect"
                android:textColor="@color/light_grey_for_text"
                android:textSize="14sp" />


            <View
                android:id="@+id/view"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/light_grey" />


            <TextView
                android:id="@+id/tvDelivery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_3dp"
                android:layout_weight="1"
                android:fontFamily="@font/volte_medium"
                android:gravity="center"
                android:text="Delivery"
                android:textColor="@color/light_grey_for_text"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llOrder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_30dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_5dp"
            android:layout_marginBottom="@dimen/padding_7dp"
            android:gravity="center"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOrder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:fontFamily="@font/volte_bold"
                android:gravity="center"
                android:text="Order Now"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/ivOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:src="@drawable/ic_right_arrow" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</layout>