<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/padding_10dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLeftMenu"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_weight="1"
            android:fontFamily="@font/volte_semibold"
            android:paddingLeft="0dp"
            android:textColor="@color/menutextcolor"
            android:textSize="@dimen/text13"
            tools:text="@string/app_name" />


        <TextView
            android:id="@+id/tvLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/padding_7dp"
            android:layout_marginRight="@dimen/padding_7dp"
            android:fontFamily="@font/volte_medium"
            android:text="English"
            android:textColor="@color/menutextcolor"
            android:textSize="@dimen/text12_5"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="@dimen/padding_12dp"
            android:layout_height="@dimen/padding_12dp"
            android:layout_gravity="left|center"
            android:src="@drawable/rightarrow"
            app:tint="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginLeft="44dp"
        android:paddingLeft="0dp"
        android:fontFamily="@font/volte_medium"
        android:textColor="@color/green_color_regular"
        android:textSize="11sp"
        android:visibility="gone" />


    <View
        android:id="@+id/views"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/padding_5dp"
        android:background="@color/lightGrayColor" />

</LinearLayout>
</layout>
