<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp">

        <TextView
            android:id="@+id/tv_catName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/volte_bold"
            tools:text="Best Takeaway in London/ Outside London"
            android:drawableLeft="@drawable/ic_award_cup"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="@color/blue_shade"
            android:textSize="@dimen/_14sdp" />

        <RelativeLayout
            android:id="@+id/vote_now_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/bg_voucher_share_btn"
            android:backgroundTint="#dadde2">

            <TextView
                android:id="@+id/tv_already_voted"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:fontFamily="@font/volte_medium"
                android:gravity="center"
                android:text="ALREADY VOTED"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_thankyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/volte_bold"
            android:text="Thank you for your vote"
            android:textColor="@color/blue_shade"
            android:textSize="@dimen/_15sdp" />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/dotted_line" />

</LinearLayout>
</layout>