<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_3dp"
    android:layout_marginTop="@dimen/padding_3dp"
    android:layout_marginRight="@dimen/padding_5dp"
    android:layout_marginBottom="@dimen/padding_3dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_5dp">

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_3dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:minLines="1"
            android:textColor="@color/grey"
            android:textSize="@dimen/heading"
            android:fontFamily="@font/volte_bold"
            tools:text="Best milkshakes " />

        <ImageView
            android:id="@+id/iv_drop_down_icon"
            android:layout_width="20dp"
            android:layout_height="@dimen/padding_20dp"
            android:src="@drawable/ic_expand_less_black_24dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_5dp"
        android:paddingRight="@dimen/padding_5dp"
        android:scrollbars="none"
        android:visibility="visible" />

</LinearLayout>
