<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="@dimen/padding_5dp">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ivTime"
                android:layout_width="@dimen/padding_15dp"
                android:layout_height="@dimen/padding_15dp"
                android:layout_gravity="left|center"
                android:src="@drawable/time" />


            <TextView
                android:id="@+id/tv_location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_3dp"
                android:layout_toRightOf="@+id/ivTime"
                android:ellipsize="end"
                android:maxLength="30"
                android:minLines="1"
                android:text="bkjhk"
                android:fontFamily="@font/volte_medium"
                android:textColor="@color/light_grey_for_text"
                android:textSize="@dimen/medium_heading" />

            <TextView
                android:id="@+id/tv_distance_in_miles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_5dp"
                android:layout_toRightOf="@+id/tv_location_name"
                android:layout_weight="1"
                android:text="bkjhk"
                android:fontFamily="@font/volte_medium"
                android:textColor="@color/light_grey_for_text"
                android:textSize="@dimen/medium_heading" />


            <ImageView
                android:layout_width="@dimen/padding_15dp"
                android:layout_height="@dimen/padding_15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/uparrow" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rl"
        android:layout_marginTop="@dimen/padding_2dp"
        android:background="@color/light_grey"
        android:visibility="visible" />

</RelativeLayout>