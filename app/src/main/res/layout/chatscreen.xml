<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="@dimen/padding_7dp"
                android:src="@drawable/ic_circle_back_arrow" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLength="25"
                android:fontFamily="@font/volte_semibold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="Sambhal Express" />


            <FrameLayout
                android:id="@+id/swich"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/padding_3dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/padding25"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center">

                <ImageView
                    android:id="@+id/ivON"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="right|center"
                    android:src="@drawable/on_switch"
                   />

                <ImageView
                    android:id="@+id/ivOFF"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_gravity="right|center"
                    android:src="@drawable/off_switch"
                    />
            </FrameLayout>

            <TextView
                android:id="@+id/tvNotify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right|center"
                android:ellipsize="end"
                android:maxLength="25"
                android:fontFamily="@font/volte_medium"
                android:gravity="right|center"
                android:layout_marginTop="@dimen/padding_15dp"
                android:layout_marginRight="@dimen/padding_30dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="visible"
                android:text="Notify" />

            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="@dimen/padding_20dp"
                android:layout_height="@dimen/padding_20dp"
                android:visibility="visible"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/padding_7dp"
                app:srcCompat="@drawable/ic_more"
                android:tint="@color/white"/>


        </FrameLayout>
    </LinearLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:duration="800">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10dp"
        android:background="@drawable/llwhite35"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/exMessge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/volte_medium"
            android:hint="Type your Message"
            android:minLines="3"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="@dimen/padding25"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:src="@drawable/camerachat" />

        <ImageView
            android:id="@+id/ivSend"
            android:layout_width="@dimen/padding25"
            android:layout_height="@dimen/padding25"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:layout_marginRight="@dimen/padding_5dp"
            android:src="@drawable/sendchat" />


    </LinearLayout>

</LinearLayout>
</layout>