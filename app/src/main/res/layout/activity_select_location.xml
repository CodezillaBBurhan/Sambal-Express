<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recycler_bg_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true">


    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/toolbar_left_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toLeftOf="@id/toolbar_title"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding_5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_circle_back_arrow"
                android:visibility="visible" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:fontFamily="@font/volte_semibold"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="@string/app_name" />

            <ImageButton
                android:id="@+id/toolbar_right_like_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/padding_10dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/unlike_filled"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/toolbar_right_image"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_10dp"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding_3dp"
                android:scaleType="centerInside"
                android:src="@drawable/share" />

            <TextView
                android:id="@+id/tv_visit_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_10dp"
                android:text="VISIT US"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_heading"
                android:fontFamily="@font/volte_medium"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_10dp"
        android:layout_marginRight="@dimen/padding_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_full_name_lable"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_5dp"
            android:text="YOUR LOCATION"
            android:textColor="@color/grey"
            android:textSize="@dimen/medium_heading"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_auto_complete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_7dp"
            android:background="@drawable/llgrey"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_5dp"
                android:src="@drawable/search" />

            <AutoCompleteTextView
                android:id="@+id/et_location_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center"
                android:layout_marginTop="@dimen/padding_5dp"
                android:layout_marginRight="@dimen/padding_5dp"
                android:layout_marginBottom="@dimen/padding_5dp"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="left|center"
                android:hint="Search Location"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:fontFamily="@font/volte_medium"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/text12_5" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_current_location"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/padding_7dp"
                    android:background="@drawable/gradient"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/padding_20dp"
                        android:layout_height="@dimen/padding_20dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/padding_5dp"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_my_location_black_24dp" />

                    <TextView
                        android:id="@+id/tv_current_location"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|center"
                        android:layout_marginTop="@dimen/padding_5dp"
                        android:layout_marginRight="@dimen/padding_5dp"
                        android:layout_marginBottom="@dimen/padding_5dp"
                        android:gravity="left|center"
                        android:hint="Use My Current Location"
                        android:singleLine="true"
                        android:fontFamily="@font/volte_medium"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text12_5" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginTop="@dimen/padding_7dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/medium_heading"
                    android:visibility="gone" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_current_location"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/padding_7dp"
                    android:minHeight="136dp">

                    <RelativeLayout
                        android:id="@+id/rl1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:maxHeight="@dimen/height"
                        android:visibility="visible"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.7"
                        app:layout_constraintDimensionRatio="H, 16:9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            app:layout_constraintDimensionRatio="H, 16:9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!--android:name="com.google.android.gms.maps.MapFragment"-->

                        <ImageView
                            android:id="@+id/card_bg_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:maxHeight="@dimen/height"
                            android:scaleType="centerCrop"
                            android:visibility="gone"
                            app:layout_constraintDimensionRatio="H, 16:9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_7dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_search_with_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/padding_5dp"
                                android:text="Search within "
                                android:textColor="@color/light_grey_for_text"
                                android:textSize="@dimen/medium_heading"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_search_miles"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_toRightOf="@+id/tv_search_with_txt"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/padding25"
                                android:text="1 miles"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/medium_heading" />

                        </RelativeLayout>

                        <SeekBar
                            android:id="@+id/seekbar_set_miles"
                            style="@style/MyCustomProgressStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="-10dp"
                            android:layout_marginRight="-10dp"
                            android:max="99"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btn_search"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/padding_7dp"
                            android:layout_marginRight="@dimen/padding_5dp"
                            android:layout_marginBottom="@dimen/padding_5dp"
                            android:background="@drawable/llblue"
                            android:text="GO"
                            android:fontFamily="@font/volte_bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_recent_location_text"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:padding="@dimen/padding_7dp"
                            android:fontFamily="@font/volte_medium"
                            android:text="RECENT SEARCHES"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/medium_heading" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/padding_5dp"
                            android:background="@color/white"
                            android:scrollbars="none"
                            android:visibility="gone" />

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_location_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5dp"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:id="@+id/act_del_add_cc_my_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f5f7fa"
                    card_view:cardElevation="3dp"
                    card_view:cardPreventCornerOverlap="false"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/location_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" />

                        <ImageView
                            android:id="@+id/powered_by_google"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/location_recycler_view"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:src="@drawable/places_powered_by_google_light" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
</layout>