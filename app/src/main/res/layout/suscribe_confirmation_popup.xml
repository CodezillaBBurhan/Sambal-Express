<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@color/transparent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cancel_btn"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="right"
                android:background="@drawable/ic_cancel_icon" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_card_corner_home"
                android:gravity="center"
                android:paddingVertical="@dimen/_20sdp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/volte_semibold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:id="@+id/popup_title"
                    android:gravity="center"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:text="Donâ€™t miss out\n subscribe to grab this deal!"
                    />

                <Button
                    android:id="@+id/subscribeNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subscribe Now"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:background="@drawable/background_border_blue"
                    android:backgroundTint="#007BFF"
                    android:textColor="@android:color/white"
                    android:paddingVertical="12dp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/volte_medium"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_15sdp" />


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</layout>

