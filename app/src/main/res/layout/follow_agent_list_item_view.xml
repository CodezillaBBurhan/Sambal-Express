<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_7dp"
    android:layout_marginTop="@dimen/padding_7dp"
    android:layout_marginRight="@dimen/padding_7dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/padding_10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_7dp"
        android:orientation="horizontal">


<!--        <androidx.cardview.widget.CardView-->
<!--            android:layout_width="110dp"-->
<!--            android:layout_height="72dp">-->

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="110dp"
                android:layout_height="72dp"
                android:layout_gravity="right|center"
                android:gravity="start"
                android:visibility="visible"
                app:layout_constraintDimensionRatio="H, 16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/card_bg_img"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/place_holder"
                    android:visibility="visible"
                    app:layout_constraintDimensionRatio="H,4:3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:riv_border_color="#333333"
                    app:riv_border_width="0dip"
                    app:riv_corner_radius="10dip"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />
            </RelativeLayout>
<!--        </androidx.cardview.widget.CardView>-->


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_5dp"
            android:layout_marginTop="@dimen/padding_3dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/padding_3dp"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="@dimen/padding_3dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/volte_bold"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    tools:text="Salman Hanfi" />

                <TextView
                    android:id="@+id/tv_sub_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="1dp"
                    android:maxLines="2"
                    android:minLines="2"
                    android:textColor="@color/light_grey_for_text"
                    android:textSize="@dimen/small_heading"
                    android:visibility="gone"
                    tools:text="Shakes and Co London" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.5dp"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <ImageView
                        android:layout_width="@dimen/padding_10dp"
                        android:layout_height="@dimen/padding_10dp"
                        android:layout_marginTop="2.5dp"
                        android:src="@drawable/map" />


                    <TextView
                        android:id="@+id/tv_location_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:lineSpacingMultiplier="1.2"
                        android:textColor="@color/blue_basic_theme"
                        android:textSize="@dimen/medium_heading"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_5dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/volte_medium"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        tools:text="1st Floor Braintree House,Braintree Rd(142 mi)" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_sponsered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_3dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:singleLine="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/small_heading"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_20dp"
                android:layout_gravity="left|center"
                android:layout_marginLeft="@dimen/padding_3dp"
                android:gravity="left|center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/padding_12dp"
                        android:layout_height="@dimen/padding_12dp"
                        android:layout_gravity="left|center"
                        android:src="@drawable/ic_rating_y" />

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="@dimen/padding_3dp"
                        android:fontFamily="@font/volte_medium"
                        android:textColor="#101010"
                        android:textSize="10sp"
                        tools:text="5.0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_unfollow_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_15dp"
                    android:layout_weight="0.9"
                    android:background="@drawable/llgreywhite"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="90dp"
                        android:background="@drawable/llunfollow"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_10dp"
                        android:layout_marginRight="@dimen/padding_10dp">

                        <ImageView
                            android:layout_width="@dimen/padding_10dp"
                            android:layout_height="@dimen/padding_10dp"
                            android:layout_gravity="left|center"
                            android:layout_marginLeft="@dimen/padding_12dp"
                            android:src="@drawable/cross"
                            android:tint="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/padding_7dp"
                            android:fontFamily="@font/volte_medium"
                            android:gravity="center"
                            android:text="UNFOLLOW"
                            android:textColor="@color/black"
                            android:textSize="8sp" />

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/llgreyborder">

                        <RatingBar
                            android:id="@+id/rating_bar"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/padding_5dp"
                            android:layout_marginTop="@dimen/padding_1dp"
                            android:layout_marginRight="@dimen/padding_3dp"
                            android:gravity="center"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="1" />


                        <TextView
                            android:id="@+id/tvratingssss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_marginRight="1dp"
                            android:gravity="center_vertical"
                            android:lineSpacingMultiplier="1.2"
                            android:textColor="@color/blue_basic_theme"
                            android:textSize="@dimen/small_heading" />

                    </LinearLayout>
                    <!--android:theme="@style/MyRatingBar1"-->

                    <TextView
                        android:id="@+id/tv_rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:gravity="center_vertical"
                        android:textColor="#a9a9a9"
                        android:textSize="8sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="right"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/ll_voucher"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/padding_5dp"
                            android:background="@drawable/bg_ticket_red_btn"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_vouchers"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="VOUCHERS"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/very_small_heading"
                                android:visibility="visible" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
</layout>