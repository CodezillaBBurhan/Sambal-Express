<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_7dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/padding25"
            android:layout_height="@dimen/padding25"
            android:layout_gravity="left|center"
            android:src="@drawable/card" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="DD Card No"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/volte_medium" />


        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:gravity="right|center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/volte_medium"
            tools:text="DD84297244213" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/padding_20dp"
            android:layout_height="@dimen/padding_20dp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:src="@drawable/deleetred" />


    </LinearLayout>


</LinearLayout>
</layout>