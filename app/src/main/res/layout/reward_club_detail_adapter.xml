<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        tools:context=".CakePromoActivity">

        <!-- Top Progress and Reward Info -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#800000"
            android:padding="12dp">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:progress="25"
                android:max="100"
                android:visibility="gone"
                android:progressDrawable="@drawable/progress_bar_custom" />


            <TextView
                android:id="@+id/pointsInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="View for 5 Seconds â€” Earn 5 Club Points!"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white"
                android:layout_margin="10dp"
              />
        </LinearLayout>

        <!-- Back Arrow -->


        <!-- Main Image -->
        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/topBar"
            android:layout_above="@id/bottomLayout"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/placeholder_4_3" />

 <!--normal video player-->
        <androidx.media3.ui.PlayerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/topBar"
            android:layout_above="@id/bottomLayout"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:src="@drawable/placeholder_4_3"
            android:id="@+id/video_player" />
        <!--youtube player-->
       <!-- <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtubePlayerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_below="@id/topBar"
            android:layout_centerInParent="true"
            android:visibility="visible"
            app:autoPlay="false"
             />-->
        <WebView
            android:id="@+id/youtubePlayerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/play_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_icon_red"
            android:layout_centerInParent="true"/>

        <!-- Like & Share Icons -->
        <LinearLayout
            android:id="@+id/actionPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/bottomLayout"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/likeIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_heart_outlined"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="124"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/shareIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/share_black"
                android:tint="@android:color/white"
                android:layout_marginTop="16dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/shareCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2314"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Bottom Brand and Description -->
        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#CC000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="36dp"
                    tools:src="@drawable/placeholder_4_3"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/agent_img"/>

                <TextView
                    android:id="@+id/brandName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Cake Box"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Treat yourself to a box of 6 Coconut Cupcakes, featuring soft vanilla sponge cupcakes..."
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

    </RelativeLayout>

</layout>