<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.reward_club.NoticeBoardListActivity">
    <include layout="@layout/tool_bar_colour"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_barLayout"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/notice_board_rcv"/>
    <TextView
        android:id="@+id/tvNOData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:fontFamily="@font/volte_medium"
        android:gravity="center"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/no_deal_found"
        android:text="No Data Found"
        android:textColor="@color/light_grey_for_text"
        android:textSize="@dimen/padding_15dp"
        android:textStyle="bold" />
</RelativeLayout>
</layout>