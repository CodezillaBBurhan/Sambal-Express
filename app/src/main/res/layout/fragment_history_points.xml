<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.History.HistoryPointsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivVoucher"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="top|center"
            android:src="@drawable/emptyvoucher"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tvNOData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/volte_medium"
            android:gravity="center"
            android:text="No Data Found"
            android:textColor="@color/light_grey_for_text"
            android:textSize="@dimen/padding_15dp"
            android:textStyle="bold" />

    </FrameLayout>

</LinearLayout>
</layout>