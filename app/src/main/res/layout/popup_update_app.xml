<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <!--android:background="@drawable/popup_curve_background"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/popup_content_inbold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding_5dp"
            android:gravity="center"
            android:maxLines="5"
            android:text="New Version Available"
            android:textColor="@color/black_normal_color"
            android:textSize="@dimen/heading"
            android:fontFamily="@font/volte_bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/popup_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="5"
            android:textColor="@color/black_normal_color"
            android:textSize="@dimen/sub_heading"
            android:visibility="visible" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightGrayColor" />

    <TextView
        android:id="@+id/popup_update_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:longClickable="false"
        android:text="Update"
        android:textAllCaps="false"
        android:fontFamily="@font/volte_medium"
        android:textColor="#0082D8"
        android:textSize="@dimen/heading" />

    <View
        android:id="@+id/view_btw_btn"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightGrayColor" />

    <TextView
        android:id="@+id/popup_skip_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:longClickable="false"
        android:text="Skip this Version"
        android:textAllCaps="false"
        android:fontFamily="@font/volte_medium"
        android:textColor="@color/red"
        android:textSize="@dimen/heading" />

</LinearLayout>

