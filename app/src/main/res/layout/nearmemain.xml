<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:forceDarkAllowed="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f7fa"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_bar_fragment"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@color/colorPrimaryDark"
                android:elevation="0dp"
                android:visibility="visible"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="-5dp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Invisible"
                        android:textColor="#9e9e9e"
                        android:textSize="10sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tvNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Now"
                        android:textColor="#FAFAFA"
                        android:textSize="10sp"
                        android:visibility="visible" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivHumburger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="@dimen/padding_7dp"
                        app:srcCompat="@drawable/ic_circle_back_arrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Near Me"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/volte_semibold"
                        android:textSize="20sp"
                        android:id="@+id/title_tv"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/near_location_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/padding25"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/map"
                            android:tint="@color/white" />

                        <TextView
                            android:id="@+id/tv_toolbar_location"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/volte_medium"
                            android:gravity="left|center"
                            android:maxLength="20"
                            android:paddingStart="@dimen/padding_3dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:text="Location" />


                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:paddingStart="5dp"
                            android:src="@drawable/downarrow"
                            android:tint="@color/white"
                            android:visibility="visible" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivNoti"
                        android:layout_width="@dimen/padding_20dp"
                        android:layout_height="@dimen/padding_20dp"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="@dimen/padding_5dp"
                        android:src="@drawable/notifyblack"
                        android:visibility="gone" />


                </FrameLayout>


            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/llLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="12sp"
                android:fontFamily="@font/volte_medium"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/downarrow"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                app:tint="@color/colorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:id="@+id/calegory_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_5dp"
                android:layout_marginTop="@dimen/padding_10dp"
                android:layout_marginRight="@dimen/padding_5dp"
                android:id="@+id/category_title_layout"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/volte_medium"
                    android:gravity="left|center"
                    android:text="Categories"
                    android:textColor="#222a3c"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/tvAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:text="View all"
                    android:fontFamily="@font/volte_semibold"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ivAll"
                    android:layout_width="@dimen/padding_15dp"
                    android:layout_height="@dimen/padding_15dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/padding_5dp"
                    android:src="@drawable/newrarrow"
                    android:tint="@color/black"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10dp"
                android:nestedScrollingEnabled="false"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />


        <!-- <android.support.v4.widget.SwipeRefreshLayout
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/swiperefresh"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:visibility="gone">
         </android.support.v4.widget.SwipeRefreshLayout>-->

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedscrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/padding_10dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="vertical"
                    app:duration="800"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">
                    <include layout="@layout/near_me_shimmer_layout"/>
                    <include layout="@layout/near_me_shimmer_layout"/>
                    <include layout="@layout/near_me_shimmer_layout"/>
                    <include layout="@layout/near_me_shimmer_layout"/>
                    <include layout="@layout/near_me_shimmer_layout"/>
                    <include layout="@layout/near_me_shimmer_layout"/>
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/msg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="No Deals"
                    android:fontFamily="@font/volte_bold"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/load_more_progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/search_icon_bottom"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/search_img" />

        <include layout="@layout/some_thing_went_wrong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?android:attr/actionBarSize"
            android:id="@+id/near_me_page_error_layout"/>

</RelativeLayout>
</layout>