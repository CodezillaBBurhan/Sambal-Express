<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_opacity_pop">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_num_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="3/5"
        android:textColor="@color/standered_white"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:fontFamily="@font/volte_bold"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/iv_galleryClose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@+id/main_popup_layout"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/cross_icon" />





</RelativeLayout>