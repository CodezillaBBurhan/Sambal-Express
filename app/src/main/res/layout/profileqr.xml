<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black_opacity_80"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="@dimen/padding_30dp"
        android:layout_height="@dimen/padding_30dp"
        android:layout_gravity="right"
        android:background="@drawable/llclosecirle">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_gravity="right|center"
            android:background="@android:color/transparent"
            android:src="@drawable/homewhiteclose" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_30dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_marginRight="@dimen/padding_30dp"
        android:background="@drawable/lldialogoval"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/volte_bold"
                android:gravity="center"
                android:text="Collect Sambal Points"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_qr_code"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:scaleType="fitCenter"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/ivTick"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/successtick"
                    android:visibility="gone" />


                <RelativeLayout
                    android:id="@+id/rl_scanned_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <View
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:background="@color/green_opacity_80" />

                    <View
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        android:layout_centerInParent="true"
                        android:background="@color/green_opacity_26" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/padding_7dp"
                        android:background="@drawable/bg_qrcode_tansparent"
                        android:gravity="center"
                        android:text="SCANNED"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sub_heading"
                        android:fontFamily="@font/volte_bold"
                        android:visibility="gone" />

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivBarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="@dimen/padding_7dp"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvSuccess"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/padding_7dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:text="Successfully MyDD Points Awarded"
            android:textColor="#37ad49"
            android:textSize="@dimen/sub_heading"
            android:fontFamily="@font/volte_bold"
            android:visibility="gone" />
    </LinearLayout>

    <!--android:layout_marginTop="150dp"-->

</LinearLayout>

