<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dd"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_gravity="center"
        android:background="@color/colrpurple"
        android:gravity="center"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/padding_20dp"
                android:layout_height="@dimen/padding_20dp"
                android:layout_gravity="left|center"
                android:layout_marginLeft="@dimen/padding_7dp"
                android:src="@drawable/back" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="History"
                android:fontFamily="@font/volte_bold"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_30dp"
        android:background="#6c2691">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScolling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_10dp"
        android:layout_marginRight="@dimen/padding_10dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginTop="@dimen/padding_3dp"
                android:gravity="right|center"
                android:text="How does it works?"
                android:textColor="@color/white"
                android:textSize="@dimen/padding_10dp"
                android:fontFamily="@font/volte_bold" />


            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_3dp"
                android:background="@android:color/transparent">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ivUserPhoto"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center|bottom"
                    android:background="@android:color/transparent"
                    android:src="@drawable/app_icon_round"
                    android:visibility="visible" />


                <LinearLayout
                    android:id="@+id/llProfilePhoto"
                    android:layout_width="@dimen/padding25"
                    android:layout_height="@dimen/padding25"
                    android:layout_gravity="right|center|bottom"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/llcamera"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/cameradd"
                        android:visibility="visible" />
                </LinearLayout>
            </FrameLayout>


            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginTop="@dimen/padding_3dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activePo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginTop="@dimen/padding_5dp"
                            android:gravity="center"
                            android:text="Your active points"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/volte_bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/padding_3dp"
                            android:gravity="left|center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/padding25"
                                android:layout_height="@dimen/padding25"
                                android:layout_gravity="left|center"
                                android:src="@drawable/active_points" />

                            <TextView
                                android:id="@+id/tvPoints"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginLeft="@dimen/padding_3dp"
                                android:gravity="left|center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivQr"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/dummyqrcode"
                        android:tint="@color/white" />

                </LinearLayout>

                <View
                    android:layout_width="0.5px"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:background="@color/light_grey_for_text" />


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUpdateDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginTop="@dimen/padding_3dp"
                        android:layout_marginRight="@dimen/padding_5dp"
                        android:gravity="center"
                        android:textColor="#F6D209"
                        android:textSize="@dimen/text12_5"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/padding_10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:background="@drawable/addpointsmanually"
                        android:gravity="center"
                        android:text="  Add points manually  "
                        android:textColor="#A58CAB"
                        android:textSize="9sp"
                        android:fontFamily="@font/volte_bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTranHis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_10dp"
                android:background="@drawable/lllinewhite">

                <TextView
                    android:id="@+id/ViewTrans"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/text12_5"
                    android:gravity="center"
                    android:text="View  Transaction History    "
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:fontFamily="@font/volte_bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="@dimen/padding_10dp"
                android:background="@color/light_grey_for_text" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding_10dp">

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:visibility="visible"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7"
                    app:layout_constraintDimensionRatio="H, 4:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpagerBannerImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:visibility="visible"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.7"
                        app:layout_constraintDimensionRatio="H, 4:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabDots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        app:tabBackground="@drawable/tab_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp" />

                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDeals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10dp"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/ivVoucher"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="top|center"
                android:src="@drawable/vouchericon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvNoData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="top|center"
                android:text="You haven't Redeemed any Points yet "
                android:textColor="@color/white"
                android:textSize="@dimen/text12_5"
                android:visibility="gone" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>
