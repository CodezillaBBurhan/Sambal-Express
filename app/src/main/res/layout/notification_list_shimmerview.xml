<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/padding_5dp"
        card_view:cardElevation="@dimen/padding_5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_7dp"
            android:layout_marginRight="@dimen/padding_7dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/volte_semibold"
                    android:maxLines="2"
                    android:singleLine="false"
                    tools:text="Salman Hanfi"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:background="@color/shimmer_background"/>

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="@dimen/padding_15dp"
                    android:layout_height="@dimen/padding_15dp"
                    android:src="@drawable/cross"
                    android:tint="#101010"
                    android:visibility="gone" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_sub_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5dp"
                android:ellipsize="end"
                android:fontFamily="@font/volte_regular_italic"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="2dp"
                android:singleLine="false"
                android:textColor="@color/light_grey_for_text"
                android:textSize="13sp"
                android:background="@color/shimmer_background"
                tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. " />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/padding_10dp"
                android:background="@color/lightGrayColor" />


            <TextView
                android:id="@+id/tvAgentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginTop="@dimen/padding_10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/volte_semibold"
                android:maxLines="1"
                android:singleLine="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text12_5"
                android:background="@color/shimmer_background"
                tools:text="         "/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5dp"
                android:layout_marginBottom="@dimen/padding_7dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivLocation"
                    android:layout_width="@dimen/padding_15dp"
                    android:layout_height="@dimen/padding_15dp"

                    android:layout_gravity="left|center"
                    android:src="@drawable/location_gr"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvLocationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/padding_2dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/volte_medium"
                    android:maxLines="1"
                    android:singleLine="false"
                    android:textColor="@color/light_grey_for_text"
                    android:textSize="10sp"
                    tools:text="  dfd dfd"
                    android:background="@color/shimmer_background"/>


                <TextView
                    android:id="@+id/tvLocationDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/padding_3dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/volte_medium"
                    android:singleLine="false"
                    android:textColor="#a9a9a9"
                    android:textSize="10sp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tv_noti_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/padding_3dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/volte_medium"
                    android:gravity="right"
                    android:maxLines="1"
                    android:singleLine="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/padding_5dp"
                android:layout_marginBottom="7dp"
                android:background="@color/light_grey_for_text"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>