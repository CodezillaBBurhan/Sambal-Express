<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bggrey"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:contentInsetEnd="0dp"
            android:contentInsetRight="0dp"
            android:fitsSystemWindows="true"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:visibility="visible"
            android:elevation="@dimen/padding_20dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:visibility="visible"
                app:contentInsetEnd="0dp"
                app:contentInsetRight="0dp"
                app:elevation="0dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="@android:dimen/app_icon_size"
                        android:elevation="0dp"
                        android:visibility="visible"
                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="pin"
                        android:background="@color/yellow"
                        app:contentInsetStartWithNavigation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/ivBack"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_marginLeft="@dimen/padding_7dp"
                                    android:src="@drawable/ic_circle_back_arrow" />

                                <LinearLayout
                                    android:id="@+id/ll_location_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/padding_15dp"
                                        android:layout_height="15dp"
                                        android:layout_gravity="left|center"
                                        android:layout_marginTop="1dp"
                                        android:src="@drawable/map"
                                        android:tint="@color/black" />


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="-4.5dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tvNow"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="end"
                                            android:fontFamily="@font/volte_medium"
                                            android:gravity="center"
                                            android:singleLine="true"
                                            android:text="Now"
                                            android:textColor="#9e9e9e"
                                            android:textSize="8sp" />

                                        <TextView
                                            android:id="@+id/tv_toolbar_location"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:ellipsize="end"
                                            android:fontFamily="@font/volte_bold"
                                            android:gravity="left|center"
                                            android:maxLength="20"
                                            android:paddingStart="@dimen/padding_3dp"
                                            android:singleLine="true"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="13sp"
                                            tools:text="52 Manningtree Street Rd" />
                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="@dimen/padding_15dp"
                                        android:layout_height="15dp"
                                        android:layout_gravity="left|center"
                                        android:layout_marginTop="4dp"
                                        android:paddingStart="5dp"
                                        android:src="@drawable/downarrow"
                                        android:tint="@color/black"
                                        android:visibility="visible" />

                                </LinearLayout>

                                <ImageView

                                    android:id="@+id/ivNoti"
                                    android:layout_width="@dimen/padding_20dp"
                                    android:layout_height="@dimen/padding_20dp"
                                    android:layout_gravity="right|center"
                                    android:layout_marginRight="@dimen/padding_7dp"
                                    android:src="@drawable/notifyblack" />


                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/padding_10dp"
                                android:layout_marginTop="@dimen/padding_12dp"
                                android:layout_marginRight="@dimen/padding_10dp"
                                android:layout_marginBottom="@dimen/padding_12dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <LinearLayout
                                    android:id="@+id/ll_search_layout"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="13dp"
                                        android:layout_height="13dp"
                                        android:layout_marginLeft="@dimen/padding_3dp"
                                        android:src="@drawable/search_white" />

                                    <TextView
                                        android:id="@+id/tv_toolbar_search"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="3dp"
                                        android:layout_marginRight="3dp"
                                        android:focusable="false"
                                        android:gravity="center_vertical"
                                        android:text="Deals Search"
                                        android:textColor="@color/white"
                                        android:textColorHint="@color/white"
                                        android:textSize="@dimen/medium_heading" />

                                </LinearLayout>

                                <View
                                    android:layout_width="0.5dp"
                                    android:layout_height="?android:attr/actionBarSize"
                                    android:background="@color/grey"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.6"
                                    android:gravity="center_vertical|end"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/padding_15dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left|center"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/location"
                                        android:tint="@color/white" />

                                    <TextView
                                        android:id="@+id/tv_toolbar_locations"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="3dp"
                                        android:layout_marginRight="3dp"
                                        android:background="@android:color/transparent"
                                        android:gravity="center_vertical"
                                        android:hint="Location"
                                        android:maxLines="1"
                                        android:scaleType="centerInside"
                                        android:singleLine="true"
                                        android:textColor="@color/white"
                                        android:textColorHint="@color/white"
                                        android:textSize="@dimen/medium_heading" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_category_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_12dp"
                                android:layout_marginRight="@dimen/padding_10dp"
                                android:layout_marginBottom="@dimen/padding_12dp"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tv_category_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:text="All Categories"

                                    android:textColor="@color/white"
                                    android:textSize="@dimen/medium_heading" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.appcompat.widget.Toolbar>


                    <RelativeLayout
                        android:id="@+id/relativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/llBanner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:visibility="visible"
                                app:layout_collapseMode="parallax"
                                app:layout_collapseParallaxMultiplier="0.7"
                                app:layout_constraintDimensionRatio="H, 21:9"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.viewpager.widget.ViewPager
                                    android:id="@+id/viewpagerBannerImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clipToPadding="false"
                                    android:visibility="visible"
                                    app:layout_collapseMode="parallax"
                                    app:layout_collapseParallaxMultiplier="0.7"
                                    app:layout_constraintDimensionRatio="H, 21:9"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <com.google.android.material.tabs.TabLayout
                                    android:id="@+id/tabDots"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    app:tabBackground="@drawable/tab_selector"
                                    app:tabGravity="center"
                                    android:visibility="gone"
                                    app:tabIndicatorHeight="0dp" />

                            </RelativeLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </RelativeLayout>



                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/padding_5dp"
                android:layout_marginRight="@dimen/padding_5dp"
                android:background="#f5f7fa"
                android:orientation="vertical"
                android:layout_height="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="#f5f7fa"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/llGrocery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvGrocery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/volte_medium"
                            android:gravity="center"
                            android:text="Online Shops"
                            android:textColor="@color/newpurple"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llUpcoming"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUpcomig"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/volte_medium"
                            android:gravity="center"
                            android:text="Upcoming Shops"
                            android:textColor="@color/black"
                            android:textSize="15sp" />


                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"

                    android:background="@color/light_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/viewgrocery"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:background="@color/newpurple"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/viewupcoming"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:visibility="gone" />

                </LinearLayout>

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedscrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/llFilter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_5dp"
                    android:layout_marginRight="@dimen/padding_5dp"
                    android:layout_marginTop="@dimen/padding_10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llAll"
                        android:layout_width="60dp"
                        android:layout_height="23dp"
                        android:background="@drawable/llgroceryborder">

                        <TextView
                            android:id="@+id/tvAll"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="All"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#333333"
                            android:fontFamily="@font/volte_medium"
                            android:textSize="13sp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llClick"
                        android:layout_width="120dp"
                        android:layout_marginLeft="@dimen/padding_15dp"
                        android:layout_height="23dp"
                        android:background="@drawable/llgroceryborder">

                        <TextView
                            android:id="@+id/tvClick"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Click &amp; Collect"
                            android:layout_gravity="center"
                            android:fontFamily="@font/volte_medium"
                            android:gravity="center"
                            android:textColor="#333333"
                            android:textSize="13sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDelivery"
                        android:layout_width="90dp"
                        android:layout_marginLeft="@dimen/padding_15dp"
                        android:layout_height="23dp"
                        android:background="@drawable/llgroceryborder">

                        <TextView
                            android:id="@+id/tvDelivery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Delivery"
                            android:layout_gravity="center"
                            android:fontFamily="@font/volte_medium"
                            android:gravity="center"
                            android:textColor="#333333"
                            android:textSize="13sp"/>


                    </LinearLayout>


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5dp"
                    android:visibility="visible" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvUpcomig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvMsg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/volte_bold"
                    android:gravity="center"
                    android:text="No Data"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_marginRight="@dimen/padding_10dp"
            android:background="@drawable/llpurplesmallround"
            android:fontFamily="@font/volte_bold"
            android:orientation="vertical"
            android:text="Order Online"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone">

        </Button>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>