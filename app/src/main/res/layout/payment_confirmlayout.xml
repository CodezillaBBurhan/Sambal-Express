<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancel_img"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/corners"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/_10sdp">

        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/successtick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/volte_semibold"
            android:text="Successfully submitted"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />


        <TextView
            android:id="@+id/bottom_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:fontFamily="@font/volte_medium"
            android:gravity="center"
            android:visibility="visible"
            android:textColor="@color/light_grey_for_text"
            android:text="Thank you for your information \n once the payment transfer \n we will confirm"
            android:textSize="@dimen/_14sdp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/cancel_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:src="@drawable/ic_cancel" />
</RelativeLayout>