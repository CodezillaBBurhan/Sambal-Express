<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lbltitle"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:visibility="visible">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tVtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/volte_semibold"
                android:gravity="center"
                android:text=""
                android:layout_gravity="left|center"
                android:maxLength="30"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                tools:text="@string/app_name" />


            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:src="@drawable/ic_circle_back_arrow" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dd_grocer_header"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/white"
        android:gravity="start|center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_black_back_arraow"
            android:drawablePadding="@dimen/_5sdp"
            android:text="Back to MyDD"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/volte_semibold"
            android:id="@+id/back_title_tv"
            android:layout_marginLeft="@dimen/_5sdp" />


    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

       />
</LinearLayout>
</layout>