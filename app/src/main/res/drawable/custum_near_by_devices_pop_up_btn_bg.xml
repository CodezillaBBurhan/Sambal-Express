<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Border stroke -->
    <stroke
        android:width="1dp"
        android:color="@color/black" /> <!-- Adjust @color/grey to your desired border color -->

    <!-- Background color -->
    <solid android:color="@android:color/transparent" /> <!-- Set the background color here if needed -->

    <!-- Size -->
    <size
        android:width="40dp"
        android:height="40dp" />

</shape>
